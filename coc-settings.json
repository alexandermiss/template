{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "json",
    "python"
  ],
  "pyright.enable": true,
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.pythonPath": "${workspaceFolder}/.venv/bin/python",
  "python.venvPath": "${workspaceFolder}/.venv",
  "python.formatting.provider": "black",
  "python.linting.ruffEnabled": true,
  "python.linting.ruffPath": "${workspaceFolder}/.venv/bin/ruff",
  "python.linting.ruffArgs": [
    "--config",
    "${workspaceFolder}/pyproject.toml"
  ],
  "pyright.organizeimports.provider": "isort",
  "python.sortImports.path": "${workspaceFolder}/.venv/bin/isort",
  "python.sortImports.args": [
    "line_length=90",
    "multi_line_output=VERTICAL_HANGING_INDENT",
    "include_trailing_comma=true",
    "use_parentheses=true",
    "skip=.venv/,python/,.aws-sam/,flycheck_*,.cache/",
    "known_first_party = framework",
    "sections = FUTURE,STDLIB,FIRSTPARTY,LOCALFOLDER",
    "default_section = THIRDPARTY"
  ],
  "python.formatting.blackPath": "${workspaceFolder}/.venv/bin/black",
  "python.linting.mypyEnabled": true,
  "python.linting.mypyPath": "${workspaceFolder}/.venv/bin/mypy",
  "python.linting.mypyArgs": [
    "--config-file",
    "${workspaceFolder}/mypy.ini",
    "--ignore-missing-imports",
    "--show-column-numbers"
  ],
  "python.linting.ignorePatterns": [
    ".vscode/*.py",
    "**/site-packages/**/*.py",
    ".venv/**"
  ],
  "go.enable": true,
  "inlayHint.enable": false,
  "inlayHint.display": false,
  "flutter.enabled": true,
  "flutter.lsp.initialization.closingLabels": true,
  "copilot.enable": true,
  "copilot.limit": 1000
}
